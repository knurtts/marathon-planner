<div class="row" id="histList">

    <h4 class="header center">Movies History</h4>
{{#each movielist}}
    <div class="col s2 m4 l4">

        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/{{poster_path}}"
                    alt="office">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4 suggest-movie" data-movieId={{id}}>See Other
                    Movies Like This <i class="mdi-navigation-more-vert right"></i></span>
                <p><a href="#" class="likeIt" data-movieId={{id}}>I like this movie</a>
                </p>
                <p><a href="#" class="hateIt" data-movieId={{id}}>I don't like this movie</a>
                </p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4 suggest-movie">Movies like this<i class="mdi-navigation-close right"></i></span>
                <p>Here is some more information about movies that you might like.</p>
            </div>
        </div>
    </div>
{{/each}}
</div>
<script type="text/javascript">
    $('body').on('click', '.suggest-movie', function () {
        var movieId = parseInt($(this).attr('data-movieID'));
        $.ajax('/api/similar/' + movieId, {
            type: 'GET'
        }).then(function (data) {
            var movielist = data;
        });
    });

    $('body').on('click', ".likeIt", function () {

        var movieId = parseInt($(this).attr('data-movieID'));
        //console.log(movieId);

        $.ajax("/api/users/me", {
            type: "GET"
        }).then(function (data) {
            if (data) {
                var user = parseInt(data.id);
                $.ajax("/api/history/" + user + "/" + movieId + "/1", {
                    type: "POST"
                }).then(function (data) {
                    console.log("Recommendation made");
                });
            } else {
                alert("Please sign in to log your history");
            }
        });
    });

    $('body').on('click', ".hateIt", function () {

        var movieId = parseInt($(this).attr('data-movieID'));
        //console.log(movieId);

        $.ajax("/api/users/me", {
            type: "GET"
        }).then(function (data) {
            if (data) {
                var user = parseInt(data.id);
                $.ajax("/api/history/" + user + "/" + movieId + "/0", {
                    type: "POST"
                }).then(function (data) {
                    console.log("Non-recommendation made");
                });
            } else {
                alert("Please sign in to log your history")
            }
        });
    });
</script>