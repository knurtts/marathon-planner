<div class="row" id="histList">

    <h4 class="header center">Movies History</h4>

    <div class="col s2 m4 l4">

        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="https://cdn.cinematerial.com/p/297x/udapnxr3/the-dark-knight-movie-poster-md.jpg"
                    alt="office">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4 suggest-movie" data-movieId="550">See Other Movies Like This <i class="mdi-navigation-more-vert right"></i></span>
                <p><a href="#" class="likeIt" data-movieId="550">I like this movie</a>
                </p>
                <p><a href="#" class="hateIt" data-movieId="550">I don't like this movie</a>
                </p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Suggestions<i class="mdi-navigation-close right"></i></span>
                <p>Here is some more information about movies that you might like.</p>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
$('body').on('click', '.suggest-movie', function () {
  var movieId = parseInt($(this).attr('data-movieID'));
  $.ajax('/api/similar/' + movieId, {
    type: 'GET'
  }).then(function (data) {
    console.log(data);
  });
});

$('body').on('click', ".likeIt", function() {

    var movieId = parseInt($(this).attr('data-movieID'));
    //console.log(movieId);

    $.ajax("/api/users/me", {
        type: "GET"
    }).then(function(data) {
        var user = parseInt(data.id);
            $.ajax("/api/history/" +user+"/" + movieId + "/1", {
                type: "POST"
            }).then(function(data) {
            console.log("Recommendation made");
        });
        //console.log(data);
    });
});

$('body').on('click', ".hateIt", function() {

    var movieId = parseInt($(this).attr('data-movieID'));
    //console.log(movieId);

    $.ajax("/api/users/me", {
        type: "GET"
    }).then(function(data) {
        var user = parseInt(data.id);
            $.ajax("/api/history/" +user+"/" + movieId + "/0", {
                type: "POST"
            }).then(function(data) {
            console.log("Non-recommendation made");
        });
        //console.log(data);
    });
});

</script>