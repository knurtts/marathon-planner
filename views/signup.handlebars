{{!-- PASSPORT: This is the signup form to sign up to authenticate to the server --}}

<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Sign Up For Access Here</h2>
      <form id="signup" name="signup" method="post" action="/signup">

        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <input class="text white-text text-darken-2" name="email" type="email" />
          <label for="email">Email Address:</label>

        </div>
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          <input class="white-text text-darken-2" name="firstname" type="text" />
          <label for="firstname">Firstname:</label>

        </div>
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          <input class="white-text text-darken-2" name="lastname" type="text" />
          <label for="lastname">Lastname:</label>

        </div>
        <div class="input-field">
          <i class="material-icons prefix">security</i>
          <input class="white-text text-darken-2" name="password" type="password" />
          <label for="password">Password:</label>

        </div>
        <button class="btn grey darken-2" type="submit">Sign In<i class="material-icons right">fingerprint</i></button>
      </form>
    </div>
  </div>
</div>